generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  integrations Integrations[]
  meetings     Meeting[]
  teamMembers  TeamMember[]
  tasks        Task[]
  todos        Todo[]
  syncRuns     SyncRun[]
  questions    ScheduledQuestion[]
  updates      UpdateItem[]
  opportunities Opportunity[]
  conversations Conversation[]
  stakeholders  Stakeholder[]
}

model UpdateItem {
  id String @id @default(cuid())
  userId String
  source String // 'gmail'|'slack'|'github'|'google_calendar'
  type String   // 'email'|'slack_message'|'github_push'|'github_pr'|'calendar_event'
  severity String // 'urgent'|'important'|'info'
  title String
  body String? 
  occurredAt DateTime
  externalId String
  url String?
  metadata Json?
  isRead Boolean @default(false)
  isDismissed Boolean @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, source, externalId])
  @@index([userId, occurredAt])
}

model Integrations {
  id            String    @id @default(uuid())
  userId        String
  provider      String    // google, slack, jira, etc.
  accessToken   String?   // Encrypted or just stored if safe (Prompt says encrypted blob)
  refreshToken  String?
  scopes        String?
  expiresAt     DateTime?
  encryptedBlob String?   // For storing sensitive tokens encrypted
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

model Meeting {
  id               String   @id @default(uuid())
  userId           String
  calendarEventId  String
  title            String
  startTime        DateTime
  endTime          DateTime
  attendeesJson    String   // JSON string of attendees
  location         String?
  description      String?
  meetLink         String?
  htmlLink         String?
  
  summary          String?   @db.Text
  transcript       String?   @db.Text
  transcriptJson   String?   @db.Text
  processingStatus String?   @default("new") // 'new', 'processing', 'processed', 'failed'
  recordingUrl     String?
  videoProvider    String?
  highlightsJson   String?   @db.Text
  actionItemsJson  String?   @db.Text
  decisionsJson    String?   @db.Text
  blockersJson     String?   @db.Text
  
  calendarEventType       String?    // 'meeting'|'task'|'unknown'
  calendarEventConfidence Float?
  calendarEventReasoning  String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TeamMember {
  id          String   @id @default(uuid())
  userId      String
  externalId  String?  // ID from Slack or other source
  name        String
  email       String?
  avatarUrl   String?
  sourcesJson String   // JSON array of sources ["slack", "google", "jira"]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id            String    @id @default(uuid())
  userId        String
  externalId    String
  title         String
  status        String
  assigneeEmail String?
  dueDate       DateTime?
  priority      String?
  isBlocked     Boolean   @default(false)
  blockedByJson String?   // JSON details of blocking issues
  rawJson       String?   // Full payload for future use
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SyncRun {
  id         String   @id @default(uuid())
  userId     String
  provider   String
  status     String   // running, success, failed
  startedAt  DateTime @default(now())
  finishedAt DateTime?
  error      String?
  

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduledQuestion {
  id            String   @id @default(uuid())
  userId        String
  title         String   // E.g. "Daily Standup"
  text          String   // "What are you working on today?"
  targetType    String   // 'channel' or 'dm'
  targetId      String?  // Channel ID to post to, or null for 'all team members' (DMs)
  frequency     String   // 'daily', 'weekly', 'once'
  timeOfDay     String   // "09:00"
  selectedDays  String[] // Array of days e.g. ["Mon", "Fri"]
  isActive      Boolean  @default(true)
  lastSentAt    DateTime?
  lastMessageTs String?  // Slack Timestamp of the last sent message
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses QuestionResponse[]
}

model QuestionResponse {
  id                String   @id @default(uuid())
  questionId        String
  userId            String?  // ID of the user who responded (if mapped)
  slackUser         String?  // Slack User ID
  text              String
  slackTs           String   // Timestamp of the reply
  createdAt         DateTime @default(now())

  question ScheduledQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Todo {
  id               String    @id @default(uuid())
  userId           String
  title            String
  description      String?
  dueDate          DateTime?
  priority         String?   // 'low', 'medium', 'high'
  status           String    @default("pending") // 'pending', 'in_progress', 'completed'
  ownerId          String?   // For future multi-user support
  calendarEventId  String?   // Linked Google Calendar task event
  completedAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, dueDate])
}

model Opportunity {
  id              String   @id @default(uuid())
  userId          String?
  name            String
  programName     String?
  type            String
  amount          String?
  equity          String?
  description     String?
  fullDescription String?
  logo            String?
  whatItOffers    String[]
  criteria        String[]
  stage           String[]
  location        String?
  deadline        String?
  website         String?
  tags            String[]
  aiInsight       String?
  source          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String   @id @default(cuid())
  userId    String
  title     String?  // Auto-generated from first message
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId, updatedAt])
}

model ChatMessage {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // 'user' | 'assistant' | 'system'
  content        String   @db.Text
  data           Json?    // For structured AI responses (citations, insights, actions, followUps)
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model Stakeholder {
  id              String    @id @default(uuid())
  userId          String
  name            String
  role            String    // 'Champion', 'Decision Maker', etc.
  organization    String?
  email           String?
  frequencyValue  Int
  frequencyUnit   String    // 'Days', 'Weeks', 'Months'
  lastContactedAt DateTime?
  nextReachOutAt  DateTime
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, nextReachOutAt])
}

model SystemSetting {
  key   String @id
  value Json
  updatedAt DateTime @updatedAt
}
